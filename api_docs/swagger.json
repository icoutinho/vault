{
    "swagger":"2.0",
    "info": {
      "title":"Vault API",
      "version":"1.0"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/category": {
            "get": {
                "description": "Get information about categories.",
                "parameters": [{
                    "name": "name",
                    "in": "query",
                    "description": "Name of the category",
                    "required": false,
                    "type": "string"
                }],
                "responses": {
                    "200": {
                        "description": "A paged array of categories.",
                        "schema": {
                            "$ref": "#/definitions/Categories"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Category": {
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "type": "string"
                }
            }
        },
        "Categories": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Category"
            }
        }
    }
  }